{
  "compilerOptions": {
    "incremental": true,
    "target": "es5",
    "lib": ["dom", "dom.iterable", "esnext"],
    "allowJs": true,
    "skipLibCheck": true,
    "strict": true,
    "forceConsistentCasingInFileNames": true,
    "noEmit": true,
    "esModuleInterop": true,
    "module": "esnext",
    "moduleResolution": "node",
    "resolveJsonModule": true,
    "isolatedModules": true,
    "jsx": "preserve",
    "baseUrl": ".",
    "paths": {
      "$components": ["./components"],
      "$components/*": ["./components/*"],
      "$theme": ["./theme"],
      "@sanity/color": ["../../packages/@sanity/color/src"],
      "@sanity/icons": ["../../packages/@sanity/icons/src"],
      "@sanity/logos": ["../../packages/@sanity/logos/src"],
      "@sanity/ui": ["../../packages/@sanity/ui/src"]
    }
  },
  "exclude": ["./node_modules"],
  "include": ["**/*.ts", "**/*.tsx", "./next-env.d.ts", "./typings"]
}

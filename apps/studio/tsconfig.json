{
  "include": [
    "./node_modules/@sanity/base/types/**/*.ts",
    "./typings/*.d.ts",
    "./**/*.tsx",
    "./**/*.ts"
  ],
  "compilerOptions": {
    "noEmit": true,
    "module": "commonjs",
    "target": "es2020",
    "lib": ["dom", "es2020"],
    "moduleResolution": "node",
    "esModuleInterop": true,
    "strict": true,
    "skipLibCheck": true
  }
}

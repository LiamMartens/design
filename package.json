{
  "private": true,
  "name": "sanity-design",
  "version": "1.0.0-alpha.0",
  "license": "MIT",
  "scripts": {
    "build": "lerna run build",
    "dev": "lerna run --parallel --stream dev",
    "dev:color": "lerna run --stream --scope @sanity/color dev",
    "dev:docs": "run-p dev:ui-docs dev:studio",
    "dev:example-manage": "lerna run --stream --scope sanity-design-example-manage dev",
    "dev:example-studio": "lerna run --stream --scope sanity-design-example-studio dev",
    "dev:ui-docs": "lerna run --stream --scope sanity-ui-docs dev",
    "dev:storybook": "lerna run --stream --scope sanity-ui-storybook dev",
    "dev:studio": "lerna run --stream --scope sanity-design-studio dev",
    "postinstall": "run-p postinstall:husky",
    "postinstall:husky": "node node_modules/husky/lib/installer/bin install",
    "pre-commit": "run-p lint type-check",
    "release": "lerna publish --no-private",
    "lint": "lerna run lint",
    "test": "lerna run test",
    "type-check": "lerna run type-check"
  },
  "devDependencies": {
    "@typescript-eslint/eslint-plugin": "^4.6.0",
    "@typescript-eslint/parser": "^4.6.0",
    "babel-eslint": "^10.1.0",
    "eslint": "^7.12.1",
    "eslint-config-prettier": "^6.11.0",
    "eslint-plugin-import": "^2.22.1",
    "eslint-plugin-prettier": "^3.1.4",
    "eslint-plugin-react": "^7.20.6",
    "eslint-plugin-react-hooks": "^4.1.0",
    "husky": "^4.3.0",
    "lerna": "^3.22.1",
    "npm-run-all": "^4.1.5",
    "prettier": "^2.1.1",
    "rimraf": "^3.0.2",
    "ts-node": "^9.0.0",
    "typescript": "^4.0.5"
  },
  "workspaces": [
    "color",
    "examples/*",
    "icons",
    "studio",
    "ui",
    "ui-docs",
    "ui-storybook"
  ]
}

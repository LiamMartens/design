{
  "extends": "../../tsconfig",
  "include": ["./src", "typings", "./vite.config.ts"],
  "compilerOptions": {
    "rootDir": "../../",
    "outDir": "./build/dts/",
    "module": "es6",
    "target": "es5",
    "jsx": "react",
    "allowJs": true,
    "sourceMap": true,
    "baseUrl": ".",
    "paths": {
      "$sanity/*": ["./src/$sanity/*"]
    }
  },
  "references": [
    {"path": "../../color/tsconfig.lib.json"},
    {"path": "../../icons/tsconfig.lib.json"},
    {"path": "../../logos/tsconfig.lib.json"},
    {"path": "../../ui/tsconfig.lib.json"}
  ]
}
